pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'demishuaccha'
        DOCKER_CREDENTIAL_ID = 'dockerhub-creds'
        BASE_DIR = 'tingesoMS_backend'
        KUBECONFIG = 'C:/Users/demis/.kube/config' 
    }

    stages {
        stage('Cleanup Environment') {
            steps {
                script {
                    echo "--- LIMPIEZA TOTAL: Borrando recursos previos ---"
                    // El flag --wait=true es vital para evitar el error de PVC inmutable
                    bat "kubectl delete all,pvc,pv,configmap,secret --all --ignore-not-found --wait=true"
                    
                    echo "--- LIMPIEZA FÍSICA: Borrando datos de MySQL en Minikube ---"
                    // Esto asegura que el init.sh de MySQL se ejecute de nuevo
                    bat "minikube ssh \"sudo rm -rf /mnt/data/*\""
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIAL_ID, usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        bat "docker login -u %DOCKER_USER% -p %DOCKER_PASS%"
                    }
                }
            }
        }

        stage('Build and Push Microservices') {
            parallel {
                stage('Config Service') { steps { buildAndPush('config-service', 'config-service') } }
                stage('Eureka Service') { steps { buildAndPush('eureka-service', 'eureka-service') } }
                stage('Gateway Service') { steps { buildAndPush('gateway-service', 'gateway-service') } }
                stage('Auth Service') { steps { buildAndPush('tingesoMS_auth', 'tingeso-auth-service') } }
                stage('Client Service') { steps { buildAndPush('tingesoMS_client', 'tingeso-client-service') } }
                stage('Fee Service') { steps { buildAndPush('tingesoMS_fee', 'tingeso-fee-service') } }
                stage('Inventory Service') { steps { buildAndPush('tingesoMS_inventory', 'tingeso-inventory-service') } }
                stage('Kardex Service') { steps { buildAndPush('tingesoMS_kardex', 'tingeso-kardex-service') } }
                stage('Loan Service') { steps { buildAndPush('tingesoMS_loan', 'tingeso-loan-service') } }
                stage('Report Service') { steps { buildAndPush('tingesoMS_report', 'tingeso-report-service') } }
            }
        }

        stage('Deploy to K8s') {
            steps {
                script {
                    // 1. Configuración Base (Secrets y ConfigMaps)
                    echo "Configurando Secretos y ConfigMaps..."
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/mysql-secrets.yml"
                    bat "kubectl create configmap config-repo --from-file=${env.BASE_DIR}/config-data --dry-run=client -o yaml | kubectl apply -f -"
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/mysql-init-script.yml"
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/mysql-config.yml"

                    // 2. Infraestructura de MySQL (PV + Deployment/Service/PVC)
                    echo "Levantando MySQL..."
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/mysql-pv.yml"
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/mysql-deployment.yml"
                    
                    echo "Esperando a MySQL (180s)..."
                    bat "kubectl wait --for=condition=ready pod -l app=mysql-db --timeout=180s"
                    
                    // 3. Config Service (Cerebro)
                    echo "Desplegando Config Service..."
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/config-deployment.yml"
                    bat "kubectl wait --for=condition=ready pod -l app=config-service --timeout=180s"
                    
                    // 4. Eureka (Discovery)
                    echo "Desplegando Eureka..."
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/eureka-deployment.yml"
                    bat "kubectl wait --for=condition=ready pod -l app=eureka-service --timeout=180s"
                    
                    // 5. Resto de microservicios y Gateway
                    echo "Desplegando microservicios finales..."
                    bat "kubectl apply -f ${env.BASE_DIR}/k8s/"
                }
            }
        }
    }

    post {
        always {
            script {
                try { bat 'docker logout' } catch (Exception e) { echo "Docker logout omitido" }
            }
        }
        success { echo "¡Sistema desplegado con éxito en Minikube!" }
        failure { echo "El despliegue ha fallado. Revisa los logs de Jenkins." }
    }
}

def buildAndPush(folderName, imageName) {
    script {
        def fullName = "${env.DOCKER_HUB_REPO}/${imageName}:latest"
        def fullPath = "${env.BASE_DIR}/${folderName}"
        dir(fullPath) {
            bat "mvn clean package -DskipTests" 
            bat "docker build -t ${fullName} ."
            bat "docker push ${fullName}"
        }
    }
}